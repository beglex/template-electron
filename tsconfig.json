{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@root/*": ["./src/*"]
    },
    "resolveJsonModule": true,

    "allowJs": true,
    "strict": true,

    "outDir": "dist",
    "sourceMap": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
